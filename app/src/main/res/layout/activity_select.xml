<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_moshi5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/main_moshi8" />

        <ImageButton
            android:id="@+id/btn_select_mode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select1_btn"
            android:layout_gravity="center_horizontal"
            android:onClick="clickClassic" />

        <ImageButton
            android:id="@+id/btn_select_mode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select2_btn"
            android:layout_gravity="center_horizontal"
            android:onClick="clickTimeLevel" />

        <ImageButton
            android:id="@+id/btn_select_mode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select3_btn"
            android:layout_gravity="center_horizontal"
            android:onClick="clickMapLevel" />

        <ImageButton
            android:id="@+id/btn_select_mode4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select4_btn"
            android:layout_gravity="center_horizontal"
            android:onClick="clickEndless" />

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:background="@drawable/paopao"
            android:layout_gravity="center_horizontal"
            android:onClick="clickMall" />

    </LinearLayout>
    
</RelativeLayout>